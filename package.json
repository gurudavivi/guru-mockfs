{
  "name": "root",
  "version": "0.0.0",
  "private": "true",
  "engines": {
    "node": ">=12.6",
    "pnpm": ">=6.14.1"
  },
  "scripts": {
    "bootstrap": "pnpm install && pnpm --filter ./utils/cli run build",
    "build": "pnpm --if-present --stream --recursive run build",
    "bundle": "pnpm --if-present --stream --recursive run bundle",
    "commit": "cz",
    "depcheck": "npx depcheck",
    "fix": "pnpm run format && syncpack format && syncpack list-mismatches && pnpm -r --if-present --stream run fix",
    "format": "syncpack format && prettier --write **/src/**/*.ts",
    "lint": "eslint **/src/**/*.ts --fix --quiet",
    "preinstall": "npx only-allow pnpm",
    "release": "release-it --verbose -c ./utils/release/.release-it.js --dry-run",
    "reset": "./scripts/reset.sh",
    "share": "./scripts/share.sh",
    "test": "pnpm test --recursive --stream --if-present",
    "typesync": "typesync",
    "watch": "pnpm -r --if-present --stream -p run watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write",
      "syncpack format",
      "eslint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commext/eslint-config": "workspace:^0.0.0",
    "@commext/tsconfig": "workspace:^0.0.0",
    "@types/jest": "^27.5.1",
    "@types/prettier": "^2.6.1",
    "@types/rimraf": "^3.0.2",
    "@vercel/ncc": "^0.33.4",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "release-it": "^15.0.0",
    "rimraf": "^3.0.2",
    "syncpack": "^7.2.1",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "typesync": "^0.9.1"
  }
}
