{
  "name": "@repo/exec",
  "version": "0.0.0",
  "description": "@repo/exec",
  "license": "private",
  "private": true,
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "lib",
    "lib/@types",
    "!*.map"
  ],
  "directories": {
    "test": "test",
    "lib": "lib"
  },
  "exports": {
    ".": "./lib/index.js"
  },
  "scripts": {
    "build": "rimraf lib && tsc --build --force",
    "bundle": "rimraf lib && ncc build ./src/index.ts -o lib/",
    "bundle:watch": "rimraf lib && ncc build -w ./src/index.ts -o lib/",
    "fix": "pnpm run format && pnpm run lint:fix",
    "format": "syncpack format && prettier --write **/src/**/*.ts",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "test": "jest --no-cache --logHeapUsage",
    "test:cov": "jest --coverage --runInBand",
    "test:watch": "jest --runInBand --watch",
    "watch": "pnpm run build && tsc --watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "cross-spawn": "^7.0.3",
    "fs-extra": "^10.1.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.34",
    "@types/prettier": "^2.6.1",
    "@types/rimraf": "^3.0.2",
    "@utils/eslint-config": "workspace:^0.0.0",
    "@utils/tsconfig": "workspace:^0.0.0",
    "@vercel/ncc": "^0.33.4",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "tslib": "^2.4.0",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.4"
  }
}
