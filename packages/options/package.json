{
  "name": "@commext/options",
  "version": "0.0.0",
  "description": "@commext/options",
  "license": "MIT",
  "private": false,
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "lib",
    "lib/@types",
    "!*.map"
  ],
  "directories": {
    "test": "test",
    "lib": "lib"
  },
  "exports": {
    ".": "./lib/index.js"
  },
  "scripts": {
    "build": "rimraf lib && tsc --build --force",
    "bundle": "rimraf lib && ncc build ./src/index.ts -o lib/",
    "coverage": "jest --runInBand --coverage",
    "fix": "pnpm run format && pnpm run lint:fix",
    "format": "syncpack format && prettier --write **/src/**/*.ts",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "test": "jest --no-cache --logHeapUsage",
    "watch": "rimraf lib && ncc build -w ./src/index.ts -o lib/",
    "watch:bundle": "pnpm run build && tsc --watch",
    "watch:test": "jest --runInBand --watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^9.2.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@commext/eslint-config": "workspace:^0.0.0",
    "@commext/tsconfig": "workspace:^0.0.0",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.34",
    "@types/prettier": "^2.6.1",
    "@types/rimraf": "^3.0.2",
    "@vercel/ncc": "^0.33.4",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4"
  }
}
