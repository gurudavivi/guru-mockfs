{
  "name": "@guru/box",
  "version": "0.0.0",
  "description": "@guru/box",
  "license": "private",
  "private": true,
  "main": "lib/index.js",
  "types": "lib/types/index.d.ts",
  "files": [
    "lib",
    "lib/@types",
    "!*.map"
  ],
  "directories": {
    "test": "test",
    "lib": "lib"
  },
  "exports": {
    ".": "./lib/index.js"
  },
  "scripts": {
    "build": "rimraf lib && ncc build ./src/index.ts -o lib/",
    "build:ts": "rimraf lib && tsc --build --force",
    "fix": "pnpm run format && pnpm run lint:fix",
    "format": "syncpack format && prettier --write **/src/**/*.ts",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "release": "release-it --config scripts/.release-it.json --verbose --dry-run",
    "test": "jest --no-cache --logHeapUsage",
    "test:clear": "jest --clearCache",
    "test:cov": "jest --runInBand --coverage",
    "test:watch": "jest --runInBand --watch",
    "watch": "rimraf lib && ncc build -w ./src/index.ts -o lib/",
    "watch:ts": "pnpm run build && tsc --watch"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@guru/eslint-config": "workspace:^0.0.0",
    "@guru/tsconfig": "workspace:^0.0.0",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.33",
    "@types/prettier": "^2.6.1",
    "@types/rimraf": "^3.0.2",
    "@vercel/ncc": "^0.33.4",
    "cz-conventional-changelog": "^3.3.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4",
    "typesync": "^0.9.1"
  }
}
